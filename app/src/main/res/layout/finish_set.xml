<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0BCAB">

    <TextView
        android:id="@+id/finishSetTxt"
        android:layout_width="311dp"
        android:layout_height="137dp"

        android:layout_marginStart="59dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="75dp"

        android:text="Congrats! You have finished the set"
        android:textColor="#5A4947"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/subjectSelectBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="128dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/back_home"
        app:layout_constraintBottom_toTopOf="@+id/finishSetTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/rsz_1brigham_s_bears" />

    <Button
        android:id="@+id/subjectSelectBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#ffffff"
        android:text="Subject Selection"
        android:textColor="#5A4947"
        app:layout_constraintBottom_toTopOf="@+id/mainMenuButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finishSetTxt"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/mainMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="115dp"
        android:backgroundTint="#ffffff"
        android:text="Main Menu"
        android:textColor="#5A4947"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectSelectBut"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/pointsTextFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="58dp"
        android:text="Final Points:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/subjectSelectBut"
        app:layout_constraintEnd_toStartOf="@+id/pointsCounterFinal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finishSetTxt" />

    <TextView
        android:id="@+id/pointsCounterFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="58dp"
        android:text="null"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/subjectSelectBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pointsTextFinal"
        app:layout_constraintTop_toBottomOf="@+id/finishSetTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>